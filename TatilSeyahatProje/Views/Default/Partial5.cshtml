@using TatilSeyahatProje.Models.Siniflar
@model List<Blog>

<div class="box1-left">
    @foreach (var y in Model)
    {
        <div class="bot-img">
            <a href="/Blog/BlogDetay/@y.ID"><img src="@y.BlogImage" style="width:120px" height:"65px"  alt="" /></a>
        </div>
        <div class="bot-desc">
            <p>@y.Aciklama.Substring(0, 80)</p>
        </div>
        <div class="clear"></div>
    }
</div>
